{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@connection/*": [
        "src/connection/*"
      ],
      "@ai/*": [
        "src/ai/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@parsers/*": [
        "src/parsers/*"
      ],
      "@app-types/*": [
        "src/types/*"
      ],
      "@enums/*": [
        "src/enums/*"
      ],
      "@cron/*": [
        "src/cron/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "types": [
      "bun-types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}